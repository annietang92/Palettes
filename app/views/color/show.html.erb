 <div class="row">
  <div class="color_show"> 
    <div style="margin:10px;border-radius:50%;width:200px;height:200px;float:left;background-color:#<%=@color.hex%>">
    </div>

    <div class="color_description">
      <h4>Urls Count: <strong><%=@color.urls.count%></strong></h4>
      <h4>Hex Value: <strong>#<%=@color.hex%></strong></h4>
      <h4>RGB Value: <strong>(<%=@color.r%>,<%=@color.g%>,<%=@color.b%>)</strong></h4>
      <h4>Hue: <strong><%=@color.hue%></h4>
      <h4>Value: <strong><%=@color.val%></strong></h4>
    </div>

    <div class="color_urls">
      <ol class="four_columns">
        <%for url in @color.urls%>
        <li><h6><%=link_to url.display_name.truncate(20), url%><br></h6></li>
        <%end%>
      </ol>
    </div>
  </div>
</div>

<div class="row">
  <div class="color_details"> 
      <%for color in @spectrum%>
        <a href="/color/<%=Color.convert_hex_to_id(color)%>">
          <%if color == @color.hex%>
            <div class="spectrum" style="width:6px;border:4px solid black;height:40px;float:left;background-color:#<%=color%>">
            </div>
          <%else%>
            <div class="spectrum" style="width:6px;margin-bottom:10px;border-left:4px solid #<%=color%>; border-right:4px solid #<%=color%>;height:40px;float:left;background-color:#<%=color%>">
            </div>
          <%end%>
      </a>
    <%end%>
  </div>
</div>

<%if !@analogous.nil? && !@comp.nil? && !@split.nil? && !@triad.nil? && !@tetrad.nil?%>

  <div class="row">
    <div class="color_details"> 
      <h3><strong>Analogous</strong><h3>
        <%for color in @analogous%>
          <a href="/color/<%=Color.convert_hex_to_id(color)%>">
            <div style="margin:20px;border-radius:50%;width:40px;height:40px;float:left;background-color:#<%=color%>">
            </div>
          </a>
      <%end%>
    </div>
  </div>

  <div class="row">
